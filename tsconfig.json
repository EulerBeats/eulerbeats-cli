{
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": "src",
        "target": "es2019",
        "module": "CommonJS",
        "moduleResolution": "node",
        "lib": ["es2019", "es2020.bigint", "es2020.string", "es2020.symbol.wellknown"],
        "allowJs": true,
        "checkJs": true,
        "strict": true,
        "removeComments": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "noImplicitAny": false,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "sourceMap": true
    },
    "include": ["./**/*.ts"],
    "exclude": ["node_modules/**/*", ".vscode/**/*"]
}
